# Backend .env file
# Copy this file and rename it to .env (without the .example extension)

# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/honoured-consult

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Admin Credentials
ADMIN_EMAIL=info@honouredconsult.com
ADMIN_PASSWORD=honouredconsult$10,000,000@100%

# Email Configuration (for future use)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=info@honouredconsult.com
SMTP_PASSWORD=your-email-password

# Frontend URL
FRONTEND_URL=http://localhost:5173

# File Upload Configuration (optional)
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads

# API Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
